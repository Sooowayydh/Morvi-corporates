---
import { getCollection } from "astro:content";
import type { AstroSeoProps } from "@astrolib/seo";
import MarkdownPostLayout from "../../layouts/MarkdownPostLayout.astro";

export async function getStaticPaths() {
	const blogEntries = await getCollection("posts");

	return blogEntries
		.map((entry) => {
			const [lang, ...slug] = entry.slug.split("/");
			return { params: { lang, slug: slug.join("/") || undefined }, props: entry };
		})
		.filter((entry) => entry.params.lang === "en");
}

const entry = Astro.props;
const { Content } = await entry.render();

const seo: AstroSeoProps = {
	title: "Contact Morvi Corporates: Get in Touch for Reliable Verification Services",
	description:
		"Reach out to Morvi Corporates for dependable verification services and expert support. Connect with us to discuss your requirements and explore our comprehensive solutions.",
	canonical: "https://morvicorporates.com/it/contact/",
};

---

<MarkdownPostLayout frontmatter={entry.data} body={entry.body} seo={seo}>
	<Content />
</MarkdownPostLayout>
